<div id="dishes" class="">
  <% @dishes.each do |dish| %>
  <div class="box">
      <%= image_tag dish.image.url(:thumb) %>
      <%= dish.name %>
      <%= dish.description %>
      <%if dish.user == current_user %>
        Created by: <%= dish.user.email if dish.user %></td> <!--Prevent error for Dishes that do not have users -->
      <% end %>
      <%= link_to 'Show', dish %>
      <%if dish.user == current_user %>
        <%= link_to 'Edit', edit_dish_path(dish) %>
        <%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure you want to delete this dish?  You cannot undo this action.' } %>
        <% end %>
      </div>
    <% end %>
</div>
<div id="dishes">
  <% @dishes.each do |dish| %>
  <div class="box">
    <div class="boxTitle">
      <h4><%= dish.name %></h4>
    </div>
      <%= link_to( image_tag(dish.image.url(:thumb)), dish)%>
  <div class="boxMeta" text-align="justify">
   <p><%= dish.description %></p>
 </div>
   <div class="boxCredits">
     <p>Created by:</p> <%= dish.user.email if dish.user %></td> <!--Prevent error for Dishes that do not have users -->
   <%if dish.user == current_user %>
     <%= link_to 'Edit', edit_dish_path(dish) %>
     <%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure you want to delete this dish?  You cannot undo this action.' } %>
   <% end %>
  </div>
</div>
  <% end %>
</div>
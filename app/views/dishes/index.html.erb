<h1>Your Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Thumbnail</th>
      <th>Name</th>
      <th>Description</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= image_tag dish.image.url(:thumb) %></td>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.user.email if dish.user %></td> <!--Prevent error for Dishes that do not have users -->
        <td><%= link_to 'Show', dish %></td>
        <%if dish.user == current_user %>
          <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
          <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Dish', new_dish_path %>
<% end %>

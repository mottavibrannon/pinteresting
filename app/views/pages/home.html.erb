<!-- CAROUSEL -->
<div id="homeCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#homeCarousel" data-slide-to="1"></li>
    <li data-target="#homeCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    
    <div class="item active">
      <%= image_tag("cheeseBoard.jpg", :alt=>"Cheese Board") %> 
      <div class="container">
        <div class="carousel-caption">
          <h1>Welcome to FitSum</h1>
          <p>FitSum is the easiest way to create customized workout routines</p>
          <p>
            
             <% if user_signed_in? %>
              <div class="btn btn-large btn-primary">
                Get Started
              </div>
            <% elsif %>
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-large btn-primary  "%>
            <% end %>

          </p>
        </div><!-- /.carousel-caption -->
      </div><!-- /.container -->
    </div><!-- /.item active-->

    <div class="item">
      <%= image_tag("moscowMule.jpg", :alt=>"Moscow Mule") %>
      <div class="container">
        <div class="carousel-caption">
          <h1>Built Just for You</h1>
          <p>FitSum learns your fitness profile and only creates routines that best fit you and your unique style</p>
          <p>

            <% if user_signed_in? %>
              <div class="btn btn-large btn-primary">
                Get Started
              </div>
            <% elsif %>
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-large btn-primary  "%>
            <% end %>

          </p>  
        </div><!-- /.carousel-caption -->
      </div><!-- /.container -->
    </div><!-- /.item -->
    
    <div class="item">
      <%= image_tag("dinnerTable.jpeg", :alt=>"Dinner Table") %>
      <div class="container">
        <div class="carousel-caption">
          <h1>In the Moment</h1>
          <p>FitSum allows you to create unique workout based on your current needs.  At the house and only have a chair?  No problem.  FitSum will create a great workout just for you to give you that quick pump</p>
          
          <p>
           <% if user_signed_in? %>
            <div class="btn btn-large btn-primary">
              Get Started
            </div>
          <% else %>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-large btn-primary  "%>
          <% end %>
          </p>

        </div><!-- /.carousel-caption -->
      </div><!-- /.container -->
    </div><!-- /.item -->

  </div><!-- /.carousel-inner -->



  <a class="left carousel-control" href="#homeCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#homeCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>

</div>

